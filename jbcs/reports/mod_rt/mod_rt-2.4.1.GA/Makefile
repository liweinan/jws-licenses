TARGET=DLL
PROJECT = mod_rt
LIBAPR=libapr-1.lib
LIBAPU=libaprutil-1.lib
LIBHTTPD=libhttpd.lib

!IF !DEFINED(SRCDIR) || "$(SRCDIR)" == ""
SRCDIR = .
!ENDIF

!include <xbuild.inc>


LDIRS = /libpath:"$(EXTLIBPATH)"
LFLAGS = $(LFLAGS) user32.lib psapi.lib gdi32.lib shlwapi.lib wldap32.lib ole32.lib $(LIBAPR) $(LIBAPU) $(LIBHTTPD)

INCLUDES = -I$(EXTINCPATH) -I$(EXTINCPATH)\httpd
PDBFLAGS = -Fo$(WORKDIR)\ -Fd$(WORKDIR)\$(PROJECT)-src

BUILDLIB = $(PREFIX)\$(_LIB)\httpd\modules
BUILDOUT = $(WORKDIR)\$(PROJECT).so
BUILDPDB = $(WORKDIR)\$(PROJECT).pdb
BUILDRES = $(WORKDIR)\$(PROJECT).res
BUILDMFT = $(BUILDOUT).manifest

RCFLAGS =  $(RCFLAGS) /d BIN_NAME="$(PROJECT).so" /d LONG_NAME="rt_module for Apache"

OBJECTS = \
	$(WORKDIR)\mod_rt.obj

all : $(WORKDIR) $(BUILDOUT)
	@echo Building mod_rt ...

$(BUILDLIB) :
	@if not exist "$(BUILDLIB)\$(NULL)" mkdir "$(BUILDLIB)"

$(WORKDIR) :
	@$(MAKEWORKDIR)

{$(SRCDIR)}.c{$(WORKDIR)}.obj:
	$(CC) $(CFLAGS) $(INCLUDES) $(PDBFLAGS) $<

$(BUILDOUT): $(OBJECTS)
	$(LINK) $(LFLAGS) $(OBJECTS) $(LIBS) $(LDIRS) /pdb:$(BUILDPDB) /out:$(BUILDOUT)
	IF EXIST $(BUILDMFT) \
		mt -nologo -manifest $(BUILDMFT) -outputresource:$(BUILDOUT);2

install: all $(BUILDLIB)
	@xcopy "$(WORKDIR)\*.so" "$(BUILDLIB)" /I /Y /Q
	@xcopy "$(WORKDIR)\*.pdb" "$(BUILDLIB)" /I /Y /Q

